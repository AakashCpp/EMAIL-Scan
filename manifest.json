{
  "manifest_version": 3,
  "name": "Email Security Scanner",
  "version": "1.0.0",
  "description": "Scans emails for potential threats and displays safety scores",

  "permissions": ["activeTab", "storage", "scripting", "notifications"],

  "host_permissions": [
    "*://*.email.com/*",
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://outlook.office.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.email.com/*",
        "*://mail.google.com/*",
        "*://outlook.live.com/*",
        "*://outlook.office.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "*://mail.google.com/*",
        "*://*.email.com/*",
        "*://outlook.live.com/*"
      ]
    }
  ]
}
